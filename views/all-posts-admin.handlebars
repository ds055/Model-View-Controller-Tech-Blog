    {{#each posts as |post|}}
    <a href="/dashboard/edit/{{post.id}}">
        <div class="d-flex justify-content-center mt-3">
        <div id="post-card" class="col-10 border border-dark shadow rounded">
            <div class="d-flex justify-content-between align-items-center" id="post-title">
            <h3 class="col-8 ps-1">
            {{post.title}}
            </h3>
                <p id="post-username" class="text-center pt-2">
                Posted by {{post.User.username}} on {{format_date post.updatedAt}}
                </p>
            </div>
        </div>
        </div>
    </a>
    {{/each}}

<div class="d-flex justify-content-center pt-4">
    <a href="/dashboard/new">
        <button id="new-post" class="rounded">+ New Post</button>
    </a>
</div>

