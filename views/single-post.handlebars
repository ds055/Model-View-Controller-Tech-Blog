<div class="container">
  <!-- For each dish in the array of dish objects, the following <div> will be rendered. -->
    <div class="d-flex justify-content-center">
      <div id="post-card" class="col-8 border border-dark shadow mb-2 rounded">
        <h3 id="post-title" class="ps-2">
          {{singlePost.title}}
        </h3>
        <p id="post-body" class="ps-3 pt-3">
          {{singlePost.body}}
        </p>
        <p id="post-username" class="text-end pe-5">
          --{{singlePost.User.username}}
        </p>
        <p id="post-date" class="text-end pe-5">
          {{format_date singlePost.createdAt}}
        </p>
      </div>
    </div>
    <div class="d-flex justify-content-center">
        <h2>Comments</h2>
    </div>

    {{#each singlePost.Comments as |comment|}}
    <div>
        <div class="d-flex justify-content-center">
      <div id="post-card" class="col-8 border border-dark shadow mb-1 rounded">
        <p id="post-body" class="ps-3 pe-3 pt-3">
          {{comment.body}}
        </p>
        <p id="post-username" class="text-end pe-5">
          --{{comment.User.username}}
        </p>
        <p id="post-date" class="text-end pe-5">
          {{format_date comment.createdAt}}
        </p>
      </div>
    </div>
    </div>
    {{/each}}
    {{#if logged_in}}
        
        {{else}}
        <div class="d-flex justify-content-center">
            <a id="login" href="/login">Log In to Comment</a>
        </div>
    {{/if}}
</div>
