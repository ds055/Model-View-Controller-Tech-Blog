<div class="menu-container">
  <div class="card-header col-md-10">
    <h2>
      &#127869 Current Menu
    </h2>
  </div>
  <!-- For each dish in the array of dish objects, the following <div> will be rendered. -->
  {{#each posts as |post|}}
    <div class="col-md-5">
      <!-- We use dish.id instead of <od> and <li> elements. -->
      <p>
        {{post.id}}.
        {{dish.dish_name}}
      </p>
    </div>
    <div class="col-md-7">
      <p>
        Guest:
        {{dish.guest_name}}
      </p>
    </div>
  {{/each}}
</div>