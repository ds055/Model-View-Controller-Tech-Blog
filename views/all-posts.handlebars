{{!-- All post header --}}
<div class="d-flex justify-content-center mt-3 mb-3">
  <h2>
    All Posts
  </h2>
</div>
{{!-- post cards rendered from data passed from backend --}}
{{#each posts as |post|}}
  <div class="d-flex justify-content-center">
    <div id="post-card" class="col-10 border border-dark shadow mb-5 rounded">
      <a href="/post/{{post.id}}"> 
        <div class="d-flex justify-content-between align-items-center flex-wrap" id="post-title">
          <h3 class="col-8 ps-1">
          {{post.title}}
          </h3>
            <p id="post-username" class="text-center ps-2 pt-1 pe-3">
            Posted by {{post.User.username}} on {{format_date post.updatedAt}}
            </p>
        </div>
      </a> 
      <p id="post-body" class="ps-3 pt-3">
        {{post.body}}
      </p>
    </div>
  </div>
{{/each}}