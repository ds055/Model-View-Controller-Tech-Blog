<div class="container">
  <div class="d-flex justify-content-center">
    <h2>
      All Posts
    </h2>
  </div>
  <!-- For each dish in the array of dish objects, the following <div> will be rendered. -->
  {{#each posts as |post|}}
    <div class="d-flex justify-content-center">
      <div id="post-card" class="col-10 border border-dark shadow mb-5 rounded">
        <div class="d-flex justify-content-between align-items-center" id="post-title">
          <h3 class="col-8 ps-1">
          {{post.title}}
          </h3>
            <p id="post-username" class="text-center pt-2">
            Posted by {{post.User.username}} on {{format_date post.createdAt}}
            </p>
        </div>
        <p id="post-body" class="ps-3 pt-3">
          {{post.body}}
        </p>
        
      </div>
    </div>
  {{/each}}
</div>